<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Scanner :"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/etherCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ethereum"
                    android:layout_margin="8dp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ether Scanner"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tronCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/tron"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tron Scanner"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_weight="2"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>













        <androidx.cardview.widget.CardView
            android:id="@+id/bscCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="50dp"
            app:cardCornerRadius="25dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/binance"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BSC Scanner"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_weight="2"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>






        <androidx.cardview.widget.CardView
            android:id="@+id/polygonChainCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardElevation="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/polylogo"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Polygon Chain"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_weight="2"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>







</LinearLayout>