<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/etherscan_logo"
        android:layout_margin="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        android:layout_margin="14dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            app:defaultQueryHint="Enter Your Address..."
            app:iconifiedByDefault="false"
            android:layout_height="?attr/actionBarSize"/>
    </androidx.cardview.widget.CardView>




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/statmentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/transactionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INCOMING TRANSACTION"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="From :"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To :"
                    android:layout_margin="6dp"
                    android:textSize="15sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/blockNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Block Number :"
                    android:layout_margin="6dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tokenName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token Name :"
                    android:layout_margin="6dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tokenAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token Amount :"
                    android:layout_margin="6dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tokenSymbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token Symbol :"
                    android:layout_margin="6dp"
                    android:textSize="15sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/timeStamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time Stamp :"
                    android:layout_margin="6dp"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/hash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hash Number:"
                    android:layout_margin="6dp"
                    android:textSize="15sp"/>





            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>






</ScrollView>

</LinearLayout>